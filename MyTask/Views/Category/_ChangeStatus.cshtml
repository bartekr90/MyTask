@model MyTask.Core.Models.Domains.Category


@if (Model.IsActive == true)
{

    <form method="post" asp-action="ChangeStatus" asp-controller="Category">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Id" type="hidden" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>

            <input asp-for="Name" type="hidden" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <div class="form-group">
                <input type="submit" value="Deaktywuj" class="btn btn-danger form-control btn-sm" />
            </div>
        </div>
    </form>
}
else
{
    <form method="post" asp-action="ChangeStatus" asp-controller="Category">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Id" type="hidden" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
            <input asp-for="Name" type="hidden" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Aktywuj" class="btn btn-outline-primary form-control btn-sm" />
            </div>
        </div>
    </form>
}
